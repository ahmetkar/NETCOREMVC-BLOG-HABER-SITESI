@using Blog.Entity.DTOs;
@using Blog.Entity.Entities
@model (List<CategoryViewModel>,string,Dictionary<string, string>,Image)

<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="widget">
                    <div class="footer-text text-left">
                        @if (Model.Item4 != null)
                        {
                            <a href="index.html"><img style="width:200px;height:50px" src="~/images/@Model.Item4.FileName" alt="" ></a>
                        }else {
                            <a href="index.html"><img style="width:200px;height:50px" src="~/images/site-images/tech-footer-logo.png" alt=""></a>
                        }

                        @if(Model.Item2 != null){
                            <p class="for-overflow">@Model.Item2</p>
                        }else {
                            <p>Tech Blog is a technology blog, we sharing marketing, news and gadget articles.</p>
                        }

                        <div class="social">
                            @if(Model.Item3 != null){
                                @if (Model.Item3["facebook"] != "")
                                {
                                    <a href="@Model.Item3["facebook"]" data-toggle="tooltip" data-placement="bottom" title="Facebook"><i class="fa fa-facebook"></i></a>
                                }
                                @if (Model.Item3["twitter"] != "")
                                {
                                    <a href="@Model.Item3["twitter"]" data-toggle="tooltip" data-placement="bottom" title="Twitter"><i class="fa fa-twitter"></i></a>
                                }
                                @if (Model.Item3["instagram"] != "")
                                {
                                    <a href="@Model.Item3["instagram"]" data-toggle="tooltip" data-placement="bottom" title="Instagram"><i class="fa fa-instagram"></i></a>
                                }
                                @if (Model.Item3["youtube"] != "")
                                {
                                    <a href="@Model.Item3["youtube"]" data-toggle="tooltip" data-placement="bottom" title="Youtube"><i class="fa fa-youtube"></i></a>
                                }
                            }else {
                                <a href="#" data-toggle="tooltip" data-placement="bottom" title="Facebook"><i class="fa fa-facebook"></i></a>
                                <a href="#" data-toggle="tooltip" data-placement="bottom" title="Twitter"><i class="fa fa-twitter"></i></a>
                                <a href="#" data-toggle="tooltip" data-placement="bottom" title="Instagram"><i class="fa fa-instagram"></i></a>
                                <a href="#" data-toggle="tooltip" data-placement="bottom" title="Youtube"><i class="fa fa-youtube"></i></a>
                            }


                        </div>

                        <hr class="invis">
                        @*
                        <div class="newsletter-widget text-left">
                            <form class="form-inline">
                                <input type="text" class="form-control" placeholder="Enter your email address">
                                <button type="submit" class="btn btn-primary">SUBMIT</button>
                            </form>
                        </div><!-- end newsletter -->*@

                    </div><!-- end footer-text -->
                </div><!-- end widget -->
            </div><!-- end col -->

            <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                <div class="widget">
                    <h2 class="widget-title">Popüler Kategoriler</h2>
                    <div class="link-widget">
                        <ul>
                            @foreach (var i in Model.Item1)
                            {

                                <li><a href="#">@i.Name</a></li>
                            }
                        </ul>
                    </div><!-- end link-widget -->
                </div><!-- end widget -->
            </div><!-- end col -->

            <div class="col-lg-2 col-md-12 col-sm-12 col-xs-12">
                <div class="widget">
                    <h2 class="widget-title">Daha fazlası</h2>
                    <div class="link-widget">
                        <ul>
                            
                                    <li><a asp-controller="Home" asp-action="Hakkimizda">Hakkımızda</a></li>
                                
                                
                                    <li><a asp-controller="Home" asp-action="Politikalarimiz">Politikalarımız</a></li>
                                
                               
                                    <li><a asp-controller="Home" asp-action="Iletisim">İletişim</a></li>
                               
                            }
                        </ul>
                    </div><!-- end link-widget -->
                </div><!-- end widget -->
            </div><!-- end col -->
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <br>
                <div class="copyright">&copy; Tech Blog. Design: <a href="http://html.design">HTML Design</a>.</div>
            </div>
        </div>
    </div><!-- end container -->
</footer><!-- end footer -->