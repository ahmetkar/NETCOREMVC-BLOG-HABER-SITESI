@model List<UserViewModel>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> Kullanıcılar </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Kullanıcılar</h5>
        

        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="User" asp-action="Add">
            Kullanıcı Ekle <i class="bx bx-plus"></i></a>
            <br />
            <table class="table table-bordered" id="usersTable" width="100%" callspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon no :</th>
                        <th>Email doğrulaması</th>
                        <th>Bağlantı hataları</th>
                        <th>Rol</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                  @foreach (var a in Model){
                      <tr name="@a.Id">
                          <td>@a.FirstName</td>
                          <td>@a.LastName</td>
                           <td>@a.Email</td>
                           <td>@a.PhoneNumber</td>
                          <td>@(a.IsEmailConfirmed ? "Doğrulanmış":"Doğrulanmamış")</td>
                          <td>@a.AccessFailedCount</td>
                          <td>@a.Role</td>
                          <td><a class="btn btn-primary btn-sm" data-id="@a.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@a.Id"><i class="bx bxs-edit"></i></a>
                          <a class="btn btn-danger btn-sm" data-id="@a.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@a.Id"><i class="bx bx-minus-circle"></i></a>    
                          </td>
                      </tr>
                  } 
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
    </div>

    @section Scripts {
        <script src="~/js/userIndex.js" type="application/ecmascript"></script>
    }